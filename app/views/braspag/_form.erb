  <%= label_tag 'Numero do Pedido' %>
  <%= text_field_tag 'VENDAID' %>

  <br />

  <%= label_tag 'Valor Total' %>
  <%= text_field_tag 'VALOR' %>

  <br />

  <%= label_tag 'Nome do Comprador' %>
