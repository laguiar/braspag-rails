<div id="braspag_form" >
<% form_remote_tag :url => braspag_path do %>
  <%= label_tag 'Numero do Pedido' %>
  <%= text_field_tag 'VENDAID' %>

  <br />

  <%= label_tag 'Valor Total' %>
  <%= text_field_tag 'VALOR' %>

  <br />

  <%= label_tag 'Nome do Comprador' %>
  <%= text_field_tag 'NOME' %>

  <br />

  <%= yield %>

  <br />

  <%= label_tag 'Forma de Pagamento' %>
  <br />
  <%= label_tag 'Cartão de Crédito' %>
  <p>
    <%= radio_button_tag :CODPAGAMENTO, "01" %>Visa
  </p>
  <p>
    <%= radio_button_tag :CODPAGAMENTO, "02" %>American Express
  </p>
  <p>
    <%= radio_button_tag :CODPAGAMENTO, "03" %>Master card
  </p>

  <br />
  <%= label_tag 'Cartão de Débito' %>
  <p>
    <%= radio_button_tag :CODPAGAMENTO, "04" %>Visa
  </p>
  <p>
    <%= radio_button_tag :CODPAGAMENTO, "05" %>Bradesco
  </p>
  <p>
    <%= radio_button_tag :CODPAGAMENTO, "06" %>Itau
  </p>


  <%= submit_tag 'Prosseguir' %>
<% end %>
</div>

